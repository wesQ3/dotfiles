#!/bin/dash

USER=wes
IGNORELIST=/var/tmp/rsync-ignorelist

if [ ! -e $IGNORELIST ]; then
wget https://raw.githubusercontent.com/wesQ3/rsync-homedir-excludes/master/rsync-homedir-excludes.txt \
   -O $IGNORELIST
fi

rsync -av -delete \
   --exclude-from=$IGNORELIST \
   /home/$USER/ /media/$USER/dc5ca48c-808a-4d14-a01a-6f48cde04e04/backup/home/$USER
