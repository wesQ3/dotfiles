[color]
	ui = true
[core]
	autocrlf = off
	fileMode = false
	pager = /home/wes/code/diff-so-fancy/diff-so-fancy | less --tabs=4 -R
[alias]
	find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
	show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)~%aN%Creset' --abbrev-commit --date=relative
	lga = !git lg --branches --remotes --tags
	ci = commit
	st = status -s
	co = checkout
	fix = commit --amend --no-edit
	amend = commit --amend
	gg = grep --heading --break -n
	ff = merge --ff-only @{u}
	branches = branch -a
	tags = tag
	stashes = stash list
	discard = checkout --
	ds = diff --staged
[grep]
	fallbackToNoIndex = true
[diff]
	submodule = log
	algorithm = patience
[rerere]
	enabled = 1
	autoupdate = 1
[push]
	default = upstream
[mailmap]
	file = ~/.mailmap
[log]
	date = format:%Y-%m-%d %H:%M:%S (%-I %p on a %A)
[blame]
	date = format:%Y-%m-%d
[rebase]
	autostash = true
[pull]
	ff = only
[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = true
[receive]
	fsckobjects = true
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = white 52
	newNormal = green
	newHighlight = white 22
[color "diff"]
	meta = white
	frag = blue bold
	commit = yellow
	old = red
	new = green
	whitespace = red reverse
[diff-so-fancy]
	useUnicodeRuler = true
	rulerWidth = 47
